<div class = "container">
<h1><%= pluralize(@movies.size, 'Movie') %></h1></div>

<% @movies.each do |movie| %>
    <article class = "container">
        <div class= "row">
    <header class = "col-md-10">
      <div class = "col-md-1"></div>
     <div class ="col-md-2"> <br><br><%= image_for(movie) %></div>
      <div class = "col-md-7"><h2><%= link_to movie.title, movie %></h2>
      <h3><%= movie.cast %></h3></div>
    </header></div>
    <div class = row>
      <div class = "col-md-10">
      <div class = "col-md-3"></div>
      <div class = "col-md-7">
    <p>
      <h3>Description</h3>
      <%= truncate(movie.description, length: 40, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_gross(movie) %></td>
      </tr>
    </table>
  </div></div></div></div>
  </article>
<% end %>