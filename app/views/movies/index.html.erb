<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<% @movies.each do |movie| %>
  <article>
    <header>
      <%= image_for(movie) %>
      <h2><%= link_to movie.title, movie %></h2>
      <h3><%= movie.cast %></h3>
    </header>
    <p>
      <h3>Description</h3>
      <%= truncate(movie.description, length: 40, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_gross(movie) %></td>
      </tr>
    </table>
  </article>
<% end %>