<div class = "container">
  <article>
  <div class = "row">
  <header>
    <div class = "col-md-7">
    <div class="col-md-5"><br><br>
    <h1><%= @movie.title %></h1></div>
    <br>
    <div class = "col-md-2"><br><br>
    <%= image_for(@movie) %></div>
  </div>
  </header></div>
  <div class = "row">
    <div class = "col md-7">
      <div class = "col md-5">
  <h2>Description</h2>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p>
    <%= @movie.rating %>
  </p>
  <h3>Cast</h3>
  <p>
    <%= @movie.cast %>
  </p>
  
  <h3>Director</h3>
  <p>
    <%= @movie.director %>
  </p>
  <h3>Duration</h3>
<p>
  <%= @movie.duration %>
</p>
  
  <h3>Released On</h3>
  <p>
    <%= @movie.released_on %>
  </p>
  <h3>Total Gross</h3>
  <p>
    <%= format_gross(@movie) %>
  </p></div>
<div class="col-md-2"></div></div></div>
</article>
<aside>
  <div class="col-md-5 hidden-xs">
      <div class="device pull-right"></div>
      </div>
</aside>
</div>

<%= link_to "All Movies", movies_path %>
<%= link_to "Edit", edit_movie_path(@movie) %>
<%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: "Are you sure?"} %>